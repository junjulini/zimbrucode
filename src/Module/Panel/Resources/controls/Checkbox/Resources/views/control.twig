{% extends '@blocks/content/control.twig' %}

{% block content %}
    
    {% set value  = control.option|default('off') %}
    {% set active = (value == 'on') ? 'zc-panel-control-checkbox__element_active' %}

    <div class="zc-panel-control-checkbox">
        <div class="zc-panel-control-checkbox__element {{ active }}"></div>
        <input type="hidden" name="{{ control.ID }}" value="{{ value }}" id="{{ control.ID }}" {{ control.ignore }} data-control="option" autocomplete="off">
    </div>

{% endblock %}