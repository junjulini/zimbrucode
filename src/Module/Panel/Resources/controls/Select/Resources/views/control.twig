{% extends '@blocks/content/control.twig' %}
{% import "@macros/control.twig" as html %}

{% block content %}
    {{
        html.select(
            control.ID,
            control.option,
            control.settings.options,
            control.settings.configs,
            control.settings.mode|default('single'),
            'zc-panel-control-select',
            control.ignore(null, true)
        )
    }}
{% endblock %}